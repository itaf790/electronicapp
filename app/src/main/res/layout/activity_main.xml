<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Name"
        android:layout_width="367dp"
        android:layout_height="69dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lastname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp" />


    <EditText
        android:id="@+id/adress"
        android:layout_width="372dp"
        android:layout_height="92dp"
        android:ems="10"
        android:hint="adress"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="522dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="369dp"
        android:layout_height="71dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="438dp" />

    <Button
        android:id="@+id/Choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button1"
        android:text="Choose Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/Insert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />


    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="73dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview"
        app:layout_constraintVertical_bias="0.531"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp">

        <com.gbksoft.countrycodepickerlib.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:ccpDropDown_initialScrollToSelection="true"
            app:ccpDropDown_keyboardAutoPopup="false"
            app:ccpDropDown_searchEditTextTint="#00FF00"
            app:ccp_areaCodeDetectedCountry="false"
            app:ccp_autoDetectCountry="true"
            app:ccp_countryPreference="us,ca,gb,nz"
            app:ccp_hintExampleNumber="true" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="190dp"
            android:layout_height="wrap_content"

            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPhonetic"
            android:maxLength="9"
            android:padding="20dp"
            android:shadowColor="#8C7070"
            android:textColor="#000000"
            android:textColorHint="#201E1E" />

    </LinearLayout>

    <Button
        android:id="@+id/Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:text="Book appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="367dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="lastname"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="275dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="Insert Data"
        android:textAllCaps="false"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview"

        />

</androidx.constraintlayout.widget.ConstraintLayout>